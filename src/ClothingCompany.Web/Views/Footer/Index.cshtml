@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model ClothingCompany.Models.NavGroup
@{
    var homeItem = Sitecore.Context.Database.GetItem(Sitecore.Context.Site.StartPath);
}
<footer>
    <div style="background-color:cadetblue">
        <section class="section">
            <div class="container">
                <div class="columns">
                    <div class="column">
                        <figure class="image is-128x128">
                            @Html.Sitecore().Field("Logo", homeItem, new { DisableWebEdit = true })
                        </figure>
                    </div>
                    @foreach (var navItem in Model.NavItems)
                    {
                        <div class="column">
                            <a href="@navItem.Url">@Html.Sitecore().Field("Page Title", navItem.Item, new { DisableWebEdit = true })</a>
                        </div>
                    }
                </div>
            </div>
        </section>

        <div class="footer footer-extended">
            <div class="container content">
                <p>&copy; @DateTime.Now.Year Sitecore</p>
            </div>
        </div>
    </div>
</footer>